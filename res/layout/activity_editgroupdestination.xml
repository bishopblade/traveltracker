<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:layout_width="fill_parent" android:layout_height="60dp"
            android:padding="5dp"
            android:id="@+id/destination_edittext"
            android:hint="Location"
            android:inputType="text"
            android:textColor="@color/fg"
            android:textColorHint="@color/hfg"
            />
    <Button android:layout_width="fill_parent" android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:onClick="onSubmitGroupDestination"
            android:text="Change"
            android:background="@drawable/button" />
</LinearLayout>