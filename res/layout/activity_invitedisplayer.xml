<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg">
    <TextView
        android:id="@+id/inviteGroupName"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="40sp"
        >
    </TextView>
    <TextView
        android:id="@+id/inviteGroupInviter"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/hfg"
    >
    </TextView>
    <Button android:layout_width="fill_parent" android:layout_height="50dp" android:text="Accept" android:onClick="onAccept"/>
    <Button android:layout_width="fill_parent" android:layout_height="50dp" android:text="Decline" android:onClick="onDecline"/>
</LinearLayout>